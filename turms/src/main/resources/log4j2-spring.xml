<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN"
			   strict="true"
			   xmlns="http://logging.apache.org/log4j/2.0/config"
			   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			   xsi:schemaLocation="http://logging.apache.org/log4j/2.0/config https://raw.githubusercontent.com/apache/logging-log4j2/master/log4j-core/src/main/resources/Log4j-config.xsd">
	<Properties>
		<Property name="LOG_EXCEPTION_CONVERSION_WORD">%xwEx</Property>
		<Property name="LOG_LEVEL_PATTERN">%5p</Property>
		<Property name="LOG_DATEFORMAT_PATTERN">yyyy-MM-dd HH:mm:ss.SSS</Property>
		<Property name="CONSOLE_LOG_PATTERN">%clr{%d{${sys:LOG_DATEFORMAT_PATTERN}}{GMT+0}}{faint} %clr{${sys:LOG_LEVEL_PATTERN}} %clr{%pid}{magenta} %clr{---}{faint} %clr{[%15.15t]}{faint} %clr{[%X{traceId}]}{yellow} %clr{%-40.40c{1.}}{cyan} %clr{:}{faint} %m%n${sys:LOG_EXCEPTION_CONVERSION_WORD}</Property>
		<Property name="FILE_LOG_PATTERN">%d{${sys:LOG_DATEFORMAT_PATTERN}}{GMT+0} ${sys:LOG_LEVEL_PATTERN} %pid --- [%t] [%X{traceId}] %-40.40c{1.} : %m%n${sys:LOG_EXCEPTION_CONVERSION_WORD}</Property>
		<Property name="FILE_LOG_PATTERN_USER_ACTIVITY">%d{${sys:LOG_DATEFORMAT_PATTERN}}{GMT+0} ${sys:LOG_LEVEL_PATTERN} %pid --- [%t] %-40.40c{1.} : %m%n${sys:LOG_EXCEPTION_CONVERSION_WORD}</Property>
	</Properties>
	<Appenders>
		<Console name="Console"
				 target="SYSTEM_OUT"
				 follow="true">
			<PatternLayout pattern="${sys:CONSOLE_LOG_PATTERN}"
						   charset="UTF-8"/>
		</Console>
		<Routing name="Routing">
			<Routes pattern="$${ctx:TYPE}">
				<Route key="$${ctx:TYPE}">
					<RollingFile name="File"
								 fileName="../logs/turms.log"
								 filePattern="../logs/$${date:yyyy-MM}/turms-%d{yyyy-MM-dd-HH}-%i.log.gz">
						<PatternLayout pattern="${sys:FILE_LOG_PATTERN}"
									   charset="UTF-8"/>
						<Policies>
							<SizeBasedTriggeringPolicy size="10 MB"/>
						</Policies>
					</RollingFile>
				</Route>
				<Route key="USER_ACTIVITY">
					<RollingFile name="File"
								 fileName="../logs/turms-user-activity.log"
								 filePattern="../logs/$${date:yyyy-MM}/turms-user-activity-%d{yyyy-MM-dd-HH}-%i.log.gz">
						<PatternLayout pattern="${sys:FILE_LOG_PATTERN_USER_ACTIVITY}"
									   charset="UTF-8"/>
						<Policies>
							<SizeBasedTriggeringPolicy size="10 MB"/>
						</Policies>
					</RollingFile>
				</Route>
			</Routes>
		</Routing>
	</Appenders>
	<Loggers>
		<Root level="info">
			<AppenderRef ref="Console"/>
			<AppenderRef ref="Routing"/>
		</Root>
	</Loggers>
</Configuration>